generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  mascotas  Mascota[]
}

model Mascota {
  id         Int     @id @default(autoincrement())
  nombre     String
  raza       String
  categoria  String
  genero     String
  foto       String
  usuarioId  Int
  usuario    Usuario @relation(fields: [usuarioId], references: [id])
}
